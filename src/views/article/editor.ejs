<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Article Editor</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/foundation/6.3.0/css/foundation.min.css'>
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Source+Code+Pro:500"rel="stylesheet'><link rel="stylesheet" href="../css/editor.css">

<script>
  function submit() {
      const editor = document.getElementById('editor');
      const markdown = editor.value;
      const hiddenInputFormForMarkdown = document.getElementById('markdown');
      hiddenInputFormForMarkdown.value = markdown;

      //submit
      const form = document.getElementById('form');
      form.submit();
  }

</script>

</head>
<body>
  <!-- partial:index.partial.html -->
<div class="medium-offset-1 medium-10 text-center" style="display: inline-block;">
    <label for="subject" style="font-size: 20px;">SUBJECT</label>
    <form action="/article" method="POST" id="form">
        <% if(updating) { %>
          <input type="text" name="subject" id="subject" style="display: inline-block;" value="<%= article.subject %>">
          <input type="hidden" name="markdown" id="markdown" value="<%= article.subject %>">
          <input type="hidden" name="articleId" value="<%= article.articleId %>">
        <% } else { %>
          <input type="text" name="subject" id="subject" style="display: inline-block;">
          <input type="hidden" name="markdown" id="markdown">
          <input type="hidden" name="articleId" value="-999">
        <% } %>
    </form>
</div>
<div>
</div>
<div id="editor_window">
  <div class="row expanded collapse">
    <div class="medium-6 column">
      <div class="row column">
        <div class="col-title">
          Mardown 
        </div>
      </div>
      <% if(updating) { %>
        <textarea autocapitalize="off" autocomplete="off" autocorrect="off" id="editor" spellcheck="false" v-model="mdRaw"><%= article.markdown %></textarea>
      <% } else { %>
          <textarea autocapitalize="off" autocomplete="off" autocorrect="off" id="editor" spellcheck="false" v-model="mdRaw"></textarea>
      <% } %>
    </div>
    <div class="medium-6 column">
      <div class="col-title">
        Render 
      </div>
      <div class="markdown-body" v-html="mdRawRender"></div>
    </div>
  </div>
</div>

<div id="form" class="medium-12 text-center" style="display: inline-block; margin-top: 20px;">
    <button onclick="submit()" type="button" class="success button" style="display: inline-block;">Save</button>
</div>
<!-- partial -->
<script src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.1.10/vue.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.15.3/axios.min.js'></script>
<script src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/190177/marked.js'></script>
<script  src="../js/editor.js"></script>

</body>
</html>
